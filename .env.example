# ===========================================
# IDEAS GENERATOR - ENVIRONMENT VARIABLES TEMPLATE
# ===========================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# ===========================================
# GEMINI API (for Reddit analysis)
# ===========================================
# Get from https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here
GOOGLE_MODEL=gemini-3-flash-preview

GOOGLE_TEMPERATURE=0.7
GOOGLE_TOP_P=0.9
GOOGLE_TOP_K=40
GOOGLE_MAX_TOKENS=8192

# ============================================
# GOOGLE WORKSPACE APIs
# ============================================
# Path to service account JSON file
GOOGLE_SERVICE_ACCOUNT_PATH=execution/reddit_analyzer/secrets/service_account.json

# ============================================
# GOOGLE DRIVE STORAGE
# ============================================
# Parent folder ID where podcasts will be stored
# Structure: parent_folder/YYYY-MM-DD/CATEGORY/{reports,scripts,segments,episodes}
GOOGLE_DRIVE_PARENT_FOLDER_ID=1mYgr0YXeF71rjoxLsHTLEC5LL67Nbf48

# ===========================================
# EMAIL NOTIFICATIONS (Gmail SMTP)
# ===========================================
# Your email where reports will be sent
RECIPIENT_EMAIL=your_email@destination.com
# Gmail account used to send emails
SENDER_EMAIL=your_gmail@gmail.com
# Gmail App Password (generate at https://myaccount.google.com/apppasswords)
GMAIL_APP_PASSWORD=your_app_password_here

# ===========================================
# OPENAI TTS (for podcast generation)
# ===========================================
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI settings for text generation (if needed)
OPENAI_TEXT_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# ===========================================
# PODCAST STORAGE (optional - if using cloud storage)
# ===========================================
# Uncomment and configure if using cloud storage
# PODCAST_STORAGE_BUCKET=your-podcast-bucket-name
# PODCAST_STORAGE_REGION=us-east-1
# PODCAST_STORAGE_ACCESS_KEY=your_access_key
# PODCAST_STORAGE_SECRET_KEY=your_secret_key

# ===========================================
# RSS FEED CONFIGURATION
# ===========================================
PODCAST_TITLE="Idées Business Quotidiennes"
PODCAST_DESCRIPTION="Analyses quotidiennes automatisées des opportunités business découvertes sur Reddit"
PODCAST_AUTHOR="AI Business Ideas Generator"
PODCAST_CATEGORY="Business"
PODCAST_LANGUAGE="fr"
PODCAST_IMAGE_URL="https://your-domain.com/podcast-cover.jpg"
PODCAST_WEBSITE_URL="https://github.com/your-repo/ideas-generator"

# ===========================================
# AUDIO QUALITY SETTINGS
# ===========================================
AUDIO_FORMAT=mp3
AUDIO_BITRATE=128k
AUDIO_SAMPLE_RATE=24000
AUDIO_CHANNELS=mono

# ===========================================
# COST MANAGEMENT
# ===========================================
# Set limits to control costs
MAX_MONTHLY_COST_USD=100.0
MAX_EPISODES_PER_DAY=20
MAX_CONCURRENT_TTS_REQUESTS=3

# ===========================================
# DEBUGGING AND LOGGING
# ===========================================
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false
PODCAST_DRY_RUN=false

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_COST_ALERTS=true
COST_ALERT_THRESHOLD=80.0  # Percentage of monthly budget
ENABLE_ERROR_NOTIFICATIONS=true

# ===========================================
# LOCAL DEVELOPMENT
# ===========================================
ENVIRONMENT=development
PORT=8000
HOST=localhost

# ===========================================
# DATABASE (optional - if using external database)
# ===========================================
# Uncomment if using external database
# DATABASE_URL=sqlite:///execution/reddit_analyzer/reddit_ideas.db
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=reddit_ideas
# DATABASE_USER=your_username
# DATABASE_PASSWORD=your_password

# ===========================================
# CACHE SETTINGS
# ===========================================
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_SIZE=1000

# ===========================================
# RATE LIMITING
# ===========================================
REDDIT_RATE_LIMIT_DELAY=2.0  # seconds between requests
GEMINI_RATE_LIMIT_DELAY=1.0
OPENAI_RATE_LIMIT_DELAY=0.5

# ===========================================
# BACKUP SETTINGS
# ===========================================
ENABLE_BACKUPS=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=daily  # daily, weekly, monthly

# ===========================================
# SECURITY
# ==========================================
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_TIMEOUT=3600  # 1 hour in seconds

# ===========================================
# MONITORING
# ==========================================
ENABLE_METRICS=true
METRICS_ENDPOINT=http://localhost:9090/metrics
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300  # 5 minutes

# ===========================================
# FEATURE FLAGS
# ==========================================
ENABLE_PODCAST_GENERATION=true
ENABLE_EMAIL_REPORTS=true
ENABLE_ADVANCED_AUDIO_PROCESSING=true
ENABLE_MUSIC_BACKGROUND=true
ENABLE_MULTI_SPEAKER=true
ENABLE_TEXT_NORMALIZATION=true

# ===========================================
# OPENAI TTS VOICE SETTINGS
# ===========================================
DEFAULT_VOICE=onyx
EXPERT_VOICE=shimmer
GUEST_VOICE=nova
HOST_VOICE=onyx
TTS_MODEL=tts-1-hd
TTS_SPEED=1.0
TTS_PITCH=0.0
TTS_EMOTION=professional_calm

# ===========================================
# ELEVENLABS (alternative to OpenAI)
# ===========================================
# Uncomment if using ElevenLabs instead of OpenAI
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# ELEVENLABS_VOICE_ID=your_voice_id_here
# ELEVENLABS_MODEL=eleven_multilingual_v2
# ELEVENLABS_STABILITY=0.8
# ELEVENLABS_SIMILARITY_BOOST=0.8

# ===========================================
# AZURE COGNITIVE SERVICES (alternative TTS)
# ===========================================
# Uncomment if using Azure instead of OpenAI
# AZURE_TTS_KEY=your_azure_tts_key_here
# AZURE_TTS_REGION=your_region_here
# AZURE_TTS_VOICE=fr-FR-HenriNeural
# AZURE_TTS_FORMAT=audio-24khz-48kbitrate-mono-mp3

# ===========================================
# AWS Polly (alternative TTS)
# ===========================================
# Uncomment if using AWS Polly instead of OpenAI
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=us-east-1
# AWS_POLLY_VOICE=Mathieu
# AWS_POLLY_ENGINE=neural
# AWS_POLLY_SAMPLE_RATE=22050

# ===========================================
# YOUTUBE PODCAST DISTRIBUTION
# ===========================================
# Uncomment if publishing to YouTube
# YOUTUBE_API_KEY=your_youtube_api_key_here
# YOUTUBE_PLAYLIST_ID=your_playlist_id_here
# YOUTUBE_CHANNEL_ID=your_channel_id_here

# ===========================================
# APPLE PODCASTS SPOTIFY DISTRIBUTION
# ===========================================
# Uncomment if publishing to podcast platforms
# PODCAST_INDEX_API_KEY=your_podcast_index_key_here
# PODCAST_INDEX_API_SECRET=your_podcast_index_secret_here
# ANCHOR_ACCOUNT_EMAIL=your_anchor_email_here
# SPOTIFY_API_KEY=your_spotify_api_key_here

# ===========================================
# ANALYTICS AND TRACKING
# ===========================================
# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Custom analytics
CUSTOM_ANALYTICS_ENDPOINT=https://your-analytics.com/track
ENABLE_AUDIO_ANALYTICS=true
ENABLE_DOWNLOAD_TRACKING=true
ENABLE_LISTEN_TIME_TRACKING=true

# ===========================================
# BUSINESS RULES
# ===========================================
# Episode duration limits
MAX_EPISODE_DURATION_SECONDS=600  # 10 minutes
MIN_EPISODE_DURATION_SECONDS=180  # 3 minutes

# Content filtering
ENABLE_CONTENT_FILTERING=true
SENSITIVE_KEYWORD_FILTER=true
MIN_POST_SCORE=10  # Minimum Reddit post score
MAX_POST_AGE_HOURS=24

# Segment settings
MAX_SEGMENT_CHARS=4000
MIN_SEGMENT_CHARS=100
MAX_SEGMENTS_PER_EPISODE=20
